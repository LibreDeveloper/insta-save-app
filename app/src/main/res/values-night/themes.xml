<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstaSave" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:alertDialogTheme">@style/alertDialogTheme</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    Tablaout Theme-->
    <style name="Theme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="rippleColor">@color/light_blue</item>
        <item name="android:background">@color/gray</item>
        <item name="tabIndicatorColor">@color/light_blue</item>
    </style>

    <style name="Font.TabLayout" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/iransans</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--    Edittext theme-->
    <style name="editTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:textSize">@dimen/normal_font</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--    Button theme-->
    <style name="buttonThemeMain" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_main</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/small_margin</item>

    </style>

    <style name="buttonThemeAlt" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_alt</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <!--    AlertDialog Theme-->
    <style name="alertDialogTheme">
        <item name="background">@drawable/bg_edittext</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonStyle">@style/alertDialogButtonStyle</item>
        <item name="android:drawableTint">@color/red</item>
        <item name="android:textAppearance">@style/alertDialogFont</item>
    </style>

    <style name="alertDialogButtonStyle">
        <item name="android:background">@drawable/bg_btn_main</item>
    </style>

    <style name="alertDialogFont">
        <item name="android:fontFamily">@font/iransans</item>
    </style>

</resources>