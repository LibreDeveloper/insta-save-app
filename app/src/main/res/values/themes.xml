<!--        <item name="android:paddingStart">@dimen/normal_margin</item>-->
<!--        <item name="android:background">@drawable/bg_snackbar</item>-->
<!--    </style>-->
    <style name="snackbar_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableStart">@drawable/ic_important</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:drawablePadding">@dimen/small_margin</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>